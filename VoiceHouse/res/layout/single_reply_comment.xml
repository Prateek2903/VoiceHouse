<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:background="#e8e8e8" >

    <RelativeLayout
        android:id="@+id/secondactivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#e6e6e6"
        android:paddingTop="1dp" >

        <RelativeLayout
            android:id="@+id/colorIt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/comm"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/comm"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:weightSum="3" >

                <com.danh32.fontify.TextView
                    android:id="@+id/ivUpvote"
                     style="@style/LatoSemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/agree_background"
                    android:gravity="center"
                    android:padding="3dp"
                    android:alpha="0.7"
                    android:text="23 Logical"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <com.danh32.fontify.TextView
                    android:id="@+id/ivDownvote"
                     style="@style/LatoSemiBold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/disagree"
                    android:gravity="center"
                    android:padding="3dp"
                    android:alpha="0.7"
                    android:text="23 Illogical"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <com.danh32.fontify.TextView
                    android:id="@+id/ivReply"
                     style="@style/LatoSemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/invite"
                    android:gravity="center"
                    android:padding="3dp"
                 
                    android:text="23 Reply"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/imageView1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="P"
                android:textColor="#05060b"
                android:textSize="40dp" />

            <com.facebook.widget.ProfilePictureView
                 android:id="@+id/propic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                 />

            <com.danh32.fontify.TextView
                android:id="@+id/comm"
                style="@style/Lato_Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView1"
                android:layout_marginTop="5dp"
                android:text="This thing is weird that we dont believe in existence of shit until it falls on your head."
                android:textColor="#05060b"
                android:textSize="17dp" />

            <com.danh32.fontify.TextView
                android:id="@+id/text1"
                style="@style/sabon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/imageView1"
                android:layout_alignBottom="@+id/imageView1"
                android:layout_alignLeft="@+id/commentorName"
                android:alpha="0.7"
                android:text="Eloquent"
                android:textColor="#05060b"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_below="@+id/commentorName"
                android:layout_toRightOf="@+id/text1"
                android:alpha="0.7"
                android:layout_margin="5dp"
                android:src="@drawable/badge" />

            <com.danh32.fontify.TextView
                android:id="@+id/commentorName"
                style="@style/LatoSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView1"
                android:layout_toRightOf="@+id/imageView1"
                android:text="Prateek Rathore :"
                android:textColor="#05060b"
                android:textSize="19dp" 
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>