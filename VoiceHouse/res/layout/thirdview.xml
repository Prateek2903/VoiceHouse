<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8" >
    <RelativeLayout
        android:id="@+id/thirdviewsecondactivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        >
        <RelativeLayout
            android:id="@+id/thirdviewcolorIt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:background="#000000"
            android:padding="10dp" >
            <LinearLayout
                android:id="@+id/thirdviewLinearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/thirdviewcomm"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/thirdviewcomm"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:weightSum="3" >

                    <com.danh32.fontify.TextView
                        style="@style/LatoSemiBold"
                        android:id="@+id/thirdviewthirdviewivUpvote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:gravity="center"
                        android:text="23 Logical"
                        android:textColor="#ffffff"
                        android:background="@drawable/agree_background"
						android:textSize="13sp" 
						android:layout_margin="3dp"
                        android:layout_weight="1" />
                    <com.danh32.fontify.TextView
                        style="@style/LatoSemiBold"
                        android:id="@+id/thirdviewivDownvote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:gravity="center"
						android:layout_weight="1"                        
                        android:background="@drawable/agree_background"
                        android:layout_margin="3dp"
                        android:textColor="#ffffff"
                        android:text="23 Illogical"
                        android:textSize="13sp"  />

                    <com.danh32.fontify.TextView
                        style="@style/LatoSemiBold"
                        android:id="@+id/thirdviewinvite"
                        
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/invite"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:text="Invite to Discussion"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />
                
            </LinearLayout>

            <TextView
                android:id="@+id/thirdviewimageView1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="P"
                android:textColor="#05060b"
                android:textSize="40dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:src="@drawable/pp" />

            <TextView
                android:id="@+id/thirdviewcomm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/thirdviewimageView1"
                android:layout_marginTop="5dp"
                android:text="This thing is weird that we dont believe in existence of shit until it falls on your head."
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/thirdviewtext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/thirdviewimageView1"
                android:layout_alignBottom="@+id/thirdviewimageView1"
                android:layout_alignLeft="@+id/thirdviewname"
                android:alpha="0.7"
                android:text="Eloquent"
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/thirdviewname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thirdviewimageView1"
                android:layout_toRightOf="@+id/thirdviewimageView1"
                android:text="Prateek Rathore :"
                android:textColor="#ffffff"
                
                android:layout_marginLeft="8dp"
                android:textSize="19dp" />

            <ImageView
                android:id="@+id/thirdviewimageView2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_below="@+id/thirdviewname"
                android:layout_toRightOf="@+id/thirdviewtext1"
                android:alpha="0.7"
                android:layout_margin="8dp"
                android:src="@drawable/badge" />

        </RelativeLayout>
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/replylist"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/thirdviewsecondactivity"
        android:background="#e8e8e8">
        
    </ListView>
    <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="45dp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:background="#000000">
         <ImageView
             android:id="@+id/post"
             android:layout_width="45dp"
             android:layout_height="45dp"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
             android:src="@drawable/post" />
         <EditText
             android:id="@+id/thirdviewcomment"
             android:layout_width="match_parent"
             android:layout_height="fill_parent"
             android:layout_toLeftOf="@+id/post"
             android:background="#00000000"
             android:hint="Comment"
             
             android:layout_margin="2dp"
             android:padding="2dp"
             android:textColor="#ffffff"
             android:textColorHint="#d6d6d6" />

        
     </RelativeLayout>

</RelativeLayout>